<table>
  <tbody>
    <tr>
      <th>Week Number</th>
      <!-- Don't like hardcoded 4 weeks -->
      <th>Pair 1</th>
      <th>Pair 2</th>
      <th>Pair 3</th>
      <th>Pair 4</th>
    </tr>
    <% (1..@week).to_a.each do |week| %>
      <tr>
        <td><%= week %></td>
        <!-- Don't like all this logic in view -->
        <% @all_relationships.where(week: week).each do |pair| %>
          <td>
            <% person1 = Person.find_by(id: pair.partner1_id) %> 
            <% person2 = Person.find_by(id: pair.partner2_id) %>
            <%= link_to person1.name, person_path(person1) %><br>
            <%= link_to person2.name, person_path(person2) %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>