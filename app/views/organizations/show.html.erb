<h4>Pairings for Week: <%= @week %></h4>

<% @pairs.each do |pair| %>
  <% unless pair[0] %>
    <span>No Pair</span>
  <% else %>
    <%= link_to pair[0].name, person_path(pair[0]) %>
  <% end %>

  <span> | </span>

  <% unless pair[1] %>
    <span>No Pair</span>
  <% else %>
    <%= link_to pair[1].name, person_path(pair[1]) %>
  <% end %>

  <br>
<% end %>